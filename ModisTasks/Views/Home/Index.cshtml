
<div ng-controller="Main as vm">
    <link rel="stylesheet" , type="text/css" href="Content/bootstrap.min.css" />
    <br />
    <div class="row">
        <div class="container">
            <div class="panel-heading">
                <h3>Samples</h3>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-md-2">
                        <p>Sample's Status:</p>
                    </div>
                    <div class="col-md-2">
                        <select id="statusCatagory" class="form-control"
                                ng-model="vm.statusInput.selectedStatus"
                                ng-options="item.Status for item in vm.statuses
                                 track by item.Status"></select>
                    </div>
                    <div class="col-md-1">
                        <button type="button"
                                class="btn btn-sm btn btn-primary"
                                ng-click="vm.filterStatus()">
                            <p>Filter</p>
                        </button>
                    </div>
                    <div class="col-md-2">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="First or Last Name"
                                   ng-model="vm.userInput" />
                        </div>
                    </div>
                    <div class="col-md-1">
                        <button type="button"
                                class="btn btn-sm btn btn-primary"
                                ng-click="vm.searchUsers()">
                            <p>Search</p>
                        </button>
                    </div>
                    <div class="col-md-2">
                        <input type="text" class="form-control" placeholder="Any Field"
                               ng-model="vm.globalSearch"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="container">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Results</h3>
                </div>
                <div class="panel-body">
                    <table class="table">
                        <tr>
                            <td><b>Barcode</b></td>
                            <td><b>Created Date</b></td>
                            <td><b>Status</b></td>
                            <td><b>First Name</b></td>
                            <td><b>Last Name</b></td>
                        </tr>
                        <tr ng-repeat="sample in vm.samples | filter: vm.globalSearch">
                            <td>{{sample.Barcode}}</td>
                            <td>{{sample.CreatedAt}}</td>
                            <td>{{sample.Status}}</td>
                            <td>{{sample.FirstName}}</td>
                            <td>{{sample.LastName}}</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>